<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.github.tadoya.calculator.MainActivity"
    android:background="#000000">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:text="0"
        android:id="@+id/textView"
        android:textAlignment="textEnd"
        android:textColor="#ffffff"
        android:textSize="80sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:singleLine="false"
        android:maxLength="11"
        android:cursorVisible="false"
        android:maxLines="1"
        android:gravity="bottom" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <Button
                android:text="AC"
                android:id="@+id/buttonAC"
                android:layout_row="0"
                android:layout_column="0"
                android:clickable="true"
                android:layout_margin="0.1dp"
                android:background="#b2b1b1"
                android:typeface="serif"
                android:layout_rowWeight="1"
                android:allowUndo="false"
                android:layout_columnWeight="1"
                android:textSize="33sp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:onClick="onClick_Option"
                android:focusableInTouchMode="false"
                android:enabled="true"
                android:cursorVisible="false"
                android:focusable="false" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="+/-"
                android:id="@+id/buttonPlusMinus"
                android:layout_row="0"
                android:layout_column="1"
                android:clickable="true"
                android:background="#b2b1b1"
                android:layout_margin="0.1dp"
                android:typeface="serif"
                android:layout_rowWeight="1"
                android:allowUndo="false"
                android:layout_columnWeight="1"
                android:textSize="33sp"
                android:layout_weight="1"
                android:onClick="onClick_Option" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="%"
                android:id="@+id/buttonPercent"
                android:layout_row="0"
                android:layout_column="2"
                android:clickable="true"
                android:background="#b2b1b1"
                android:layout_margin="0.1dp"
                android:typeface="serif"
                android:layout_rowWeight="1"
                android:allowUndo="false"
                android:layout_columnWeight="1"
                android:textSize="33sp"
                android:layout_weight="1"
                android:onClick="onClick_Option" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="รท"
                android:id="@+id/buttonDivision"
                android:layout_row="0"
                android:layout_column="3"
                android:clickable="true"
                android:background="#f2a539"
                android:layout_margin="0.1dp"
                android:typeface="serif"
                android:textColor="#ffffff"
                android:layout_rowWeight="1"
                android:allowUndo="false"
                android:layout_columnWeight="1"
                android:textSize="33sp"
                android:layout_weight="1"
                android:onClick="onClick_Calc" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <Button
                android:text="7"
                android:id="@+id/button7"
                android:layout_row="1"
                android:layout_column="0"
                android:clickable="true"
                android:layout_margin="0.1dp"
                android:background="#dcd9d9"
                android:typeface="serif"
                android:layout_rowWeight="1"
                android:allowUndo="false"
                android:layout_columnWeight="1"
                android:textSize="33sp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:onClick="onClick_Num" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="8"
                android:id="@+id/button8"
                android:layout_row="1"
                android:layout_column="1"
                android:clickable="true"
                android:layout_margin="0.1dp"
                android:background="#dcd9d9"
                android:typeface="serif"
                android:layout_rowWeight="1"
                android:allowUndo="false"
                android:layout_columnWeight="1"
                android:textSize="33sp"
                android:layout_weight="1"
                android:onClick="onClick_Num" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="9"
                android:id="@+id/button9"
                android:layout_row="1"
                android:layout_column="2"
                android:clickable="true"
                android:layout_margin="0.1dp"
                android:background="#dcd9d9"
                android:typeface="serif"
                android:layout_rowWeight="1"
                android:allowUndo="false"
                android:layout_columnWeight="1"
                android:textSize="33sp"
                android:layout_weight="1"
                android:onClick="onClick_Num" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="ร"
                android:id="@+id/buttonMultiply"
                android:layout_row="1"
                android:layout_column="3"
                android:clickable="true"
                android:background="#f2a539"
                android:layout_margin="0.1dp"
                android:typeface="serif"
                android:allowUndo="false"
                android:singleLine="false"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:textSize="33sp"
                android:layout_weight="1"
                android:onClick="onClick_Calc" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <Button
                android:text="4"
                android:id="@+id/button4"
                android:layout_row="2"
                android:layout_column="0"
                android:clickable="true"
                android:layout_margin="0.1dp"
                android:background="#dcd9d9"
                android:typeface="serif"
                android:layout_rowWeight="1"
                android:allowUndo="false"
                android:layout_columnWeight="1"
                android:textSize="33sp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:onClick="onClick_Num" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="5"
                android:id="@+id/button5"
                android:layout_row="2"
                android:layout_column="1"
                android:clickable="true"
                android:layout_margin="0.1dp"
                android:background="#dcd9d9"
                android:typeface="serif"
                android:layout_rowWeight="1"
                android:allowUndo="false"
                android:layout_columnWeight="1"
                android:textSize="33sp"
                android:layout_weight="1"
                android:onClick="onClick_Num" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="6"
                android:id="@+id/button6"
                android:layout_row="2"
                android:layout_column="2"
                android:clickable="true"
                android:layout_margin="0.1dp"
                android:background="#dcd9d9"
                android:typeface="serif"
                android:layout_rowWeight="1"
                android:allowUndo="false"
                android:layout_columnWeight="1"
                android:textSize="33sp"
                android:layout_weight="1"
                android:onClick="onClick_Num" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="-"
                android:id="@+id/buttonMinus"
                android:layout_row="2"
                android:layout_column="3"
                android:clickable="true"
                android:background="#f2a539"
                android:layout_margin="0.1dp"
                android:typeface="serif"
                android:textColor="#ffffff"
                android:layout_rowWeight="1"
                android:allowUndo="false"
                android:layout_columnWeight="1"
                android:textSize="33sp"
                android:layout_weight="1"
                android:onClick="onClick_Calc" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <Button
                android:text="1"
                android:id="@+id/button1"
                android:layout_row="3"
                android:layout_column="0"
                android:clickable="true"
                android:layout_margin="0.1dp"
                android:background="#dcd9d9"
                android:typeface="serif"
                android:layout_rowWeight="1"
                android:allowUndo="false"
                android:layout_columnWeight="1"
                android:textSize="33sp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_span="1"
                android:onClick="onClick_Num" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="2"
                android:id="@+id/button2"
                android:layout_row="3"
                android:layout_column="1"
                android:clickable="true"
                android:layout_margin="0.1dp"
                android:background="#dcd9d9"
                android:typeface="serif"
                android:layout_rowWeight="1"
                android:allowUndo="false"
                android:layout_columnWeight="1"
                android:textSize="33sp"
                android:layout_weight="1"
                android:onClick="onClick_Num" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="3"
                android:id="@+id/button3"
                android:layout_row="3"
                android:layout_column="2"
                android:clickable="true"
                android:layout_margin="0.1dp"
                android:background="#dcd9d9"
                android:typeface="serif"
                android:layout_rowWeight="1"
                android:allowUndo="false"
                android:layout_columnWeight="1"
                android:textSize="33sp"
                android:layout_weight="1"
                android:onClick="onClick_Num" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="+"
                android:id="@+id/buttonPlus"
                android:layout_row="3"
                android:layout_column="3"
                android:clickable="true"
                android:background="#f2a539"
                android:layout_margin="0.1dp"
                android:typeface="serif"
                android:textColor="#ffffff"
                android:layout_rowWeight="1"
                android:allowUndo="false"
                android:layout_columnWeight="1"
                android:textSize="33sp"
                android:layout_weight="1"
                android:onClick="onClick_Calc" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:text="0"
                android:id="@+id/button0"
                android:layout_row="4"
                android:clickable="true"
                android:background="#dcd9d9"
                android:typeface="serif"
                android:allowUndo="false"
                android:textSize="33sp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="2"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_column="0"
                android:layout_weight="1"
                android:layout_marginLeft="0.1dp"
                android:layout_marginTop="0.1dp"
                android:layout_marginBottom="0.1dp"
                android:onClick="onClick_Num" />

            <Button
                android:id="@+id/button10"
                android:layout_row="4"
                android:clickable="true"
                android:background="#dcd9d9"
                android:typeface="serif"
                android:allowUndo="false"
                android:textSize="33sp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="2"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_column="1"
                android:layout_weight="1"
                android:layout_marginTop="0.1dp"
                android:layout_marginRight="0.1dp"
                android:layout_marginBottom="0.1dp"
                android:onClick="onClick_Num" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="."
                android:id="@+id/buttonDot"
                android:layout_row="4"
                android:clickable="true"
                android:layout_margin="0.1dp"
                android:background="#dcd9d9"
                android:typeface="serif"
                android:layout_rowWeight="1"
                android:allowUndo="false"
                android:layout_columnWeight="1"
                android:textSize="33sp"
                android:layout_column="2"
                android:layout_weight="1"
                android:onClick="onClick_Num" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="="
                android:id="@+id/buttonEqual"
                android:layout_row="4"
                android:clickable="true"
                android:background="#f2a539"
                android:layout_margin="0.1dp"
                android:typeface="serif"
                android:textColor="#ffffff"
                android:layout_rowWeight="1"
                android:allowUndo="false"
                android:layout_columnWeight="1"
                android:textSize="33sp"
                android:layout_column="3"
                android:layout_weight="1"
                android:onClick="onClick_Answer" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
